@model GravityWebExt.Models.RegisterModel
@{
    ViewData["Title"] = "Данные пользователя";
}

<h4>Изменить данные пользователя @User.Identity.Name</h4>

<div class="container">
    <form asp-action="Edit" asp-controller="Account" asp-anti-forgery="true" class="was-validated">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <input type="hidden" asp-for="Name" value="@User.Identity.Name"/>
            <div class="form-group">
                <label asp-for="Password">Введите новый пароль:</label><br />
                <input class="form-control" type="password" placeholder="Введите пароль" asp-for="Password" required />
                <span asp-validation-for="Password" />
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Повторите новый пароль:</label><br />
                <input class="form-control" type="password" placeholder="Введите пароль" asp-for="ConfirmPassword" required />
                <span asp-validation-for="ConfirmPassword" />
            </div>
            <div>
                <input type="submit" class="btn btn-primary" value="Изменить" />
            </div>
        </div>
    </form>
</div>
