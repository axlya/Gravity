@{
    string curPage = ViewContext.RouteData.Values["Action"].ToString();
}


<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gravity</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3 fixed-top">
            <div class="container">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item @(curPage == "Index"? "active" : "")">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Расчётные данные</a>
                    </li>
                    <li class="nav-item @(curPage == "Measurement"? "active" : "")">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Measurement">Данные датчиков</a>
                    </li>
                    <li class="nav-item @(curPage == "NSP"? "active" : "")">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="NSP">НСП</a>
                    </li>

                    <li class="nav-item @(curPage == "Options"? "active" : "")">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Options">Настройки</a>
                    </li>
                    </ul>
                    <ul class="navbar-nav navbar-toggler-right">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="navbardrop" data-toggle="dropdown">
                                    [@User.Identity.Name]
                                </a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Account" asp-action="Account">Редактировать</a>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Выход</a>
                                </div>
                            </li>
                            <li class="nav-item">
                                
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Login">Вход</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <br />
            <br />
            <br />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-light bg-primary">
        <div class="container">
            &copy; 2021 - ЗАО ПК "СтанкоПресс" @*- <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>*@
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



